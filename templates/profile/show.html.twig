{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}



{% block body %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}
<div class="profile-page">

    <div class="profile-container">
        <header class="profile-top">
            <h1 class="pseudo">Profil de {{ app.user.pseudo }}</h1>
            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">Éditer mon profil</a>
        </header>

        {% set photos = userProfile.photos|default([]) %}

        <div class="profile-layout">

            <!-- LEFT: Avatar + Photos -->
            <section class="card panel">
                <h2 class="panel-title">Photos</h2>

                <div class="avatar-block">
                    {% if userProfile.avatar %}
                        <img src="{{ asset('uploads/avatars/' ~ userProfile.avatar) }}" alt="Avatar" class="avatar">
                    {% else %}
                        <img src="{{ asset('uploads/avatars/default-avatar.png') }}" alt="Avatar" class="avatar">
                    {% endif %}

                    <div class="avatar-meta">
                        <div class="avatar-name">{{ app.user.pseudo }}</div>
                    </div>
                </div>

                <div class="divider"></div>

                <h3 class="sub-title">Galerie</h3>

                {% if photos is not empty %}
                    <div class="photo-gallery photo-gallery-rect">
    {% for photo in photos %}
        <img
            src="{{ asset('uploads/photos/' ~ photo) }}"
            alt="User Photo"
            class="photo-thumbnail"
            data-bs-toggle="modal"
            data-bs-target="#photoCarousel"
            data-bs-slide-to="{{ loop.index0 }}"
        >
    {% endfor %}
</div>

                {% else %}
                    <div class="empty">Aucune photo uploadée.</div>
                {% endif %}
            </section>

            <!-- RIGHT: Infos -->
            <section class="card panel">
                <h2 class="panel-title">Informations</h2>

                <div class="info-grid">
                    <div class="info-item">
                        <div class="info-label">Sexe</div>
                        <div class="info-value">{{ userProfile.sex|default('Non spécifié.') }}</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">Âge</div>
                        <div class="info-value">{{ userProfile.age|default('Non spécifié.') }}</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">Situation</div>
                        <div class="info-value">{{ userProfile.situation|default('Non renseigné.') }}</div>
                    </div>

                    {% if userProfile.research is not empty %}
                        <div class="info-item info-wide">
                            <div class="info-label">Recherche</div>
                            <div class="info-value">{{ userProfile.research|join(', ') }}</div>
                        </div>
                    {% endif %}

                    <div class="info-item">
                        <div class="info-label">Département</div>
                        <div class="info-value">{{ userProfile.department|default('Non spécifié.') }}</div>
                    </div>

                    <div class="info-item">
                        <div class="info-label">Ville</div>
                        <div class="info-value">{{ userProfile.city|default('Non spécifiée.') }}</div>
                    </div>
                </div>

                <div class="divider"></div>

                <div class="desc-block">
                    <h3 class="sub-title">Description</h3>
                    <p class="desc-text">{{ userProfile.biography|default('Aucune biographie disponible.') }}</p>
                </div>
            </section>

        </div>
    </div>

</div>

<!-- Modal Carousel -->
<div class="modal fade" id="photoCarousel" tabindex="-1">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content modal-dark">
            <div class="modal-header modal-dark-header">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body modal-dark-body">
                <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% for photo in photos %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ asset('uploads/photos/' ~ photo) }}" class="d-block w-100 carousel-img" alt="User Photo">
                            </div>
                        {% endfor %}
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
