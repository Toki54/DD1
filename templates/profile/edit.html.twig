{% extends 'base.html.twig' %}

{% block title %}Edit Profile{% endblock %}

{% block body %}
	<div class="container">
		<h1>Edit Your Profile</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		{{ form_start(form) }}

		

		<div class="mb-3">
			{{ form_label(form.sex) }}
			{{ form_widget(form.sex) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.situation) }}
			{{ form_widget(form.situation) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.biography) }}
			{{ form_widget(form.biography) }}
		</div>

<div class="mb-3">
	{{ form_label(form.research) }}
	{{ form_widget(form.research) }}
</div>

<div class="mb-3">
	{{ form_label(form.avatarFile) }}
	{{ form_widget(form.avatarFile) }}
	<small>Upload a profile picture (JPG, PNG, GIF)</small>
</div>

<div class="mb-3">
	{{ form_label(form.photoFiles) }}
	{{ form_widget(form.photoFiles) }}
	<small>Upload up to 10 photos</small>
</div>



		<div class="mb-3">
			<button type="submit" class="btn btn-primary">Save Changes</button>
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}

