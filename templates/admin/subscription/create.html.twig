{% extends 'base.html.twig' %}

{% block title %}Créer un abonnement
{% endblock %}

{% block body %}
	<h1>Créer un abonnement pour
		{{ user.username }}</h1>

	{{ form_start(form) }}
	{{ form_row(form.plan) }}
	{{ form_row(form.startDate) }}
	{{ form_row(form.endDate) }}

	<button type="submit">Créer</button>
	{{ form_end(form) }}

	<a href="{{ path('admin_subscriptions_index') }}">← Retour à la liste</a>
{% endblock %}

